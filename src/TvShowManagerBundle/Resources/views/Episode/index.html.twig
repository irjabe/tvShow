{% extends 'TvShowManagerBundle::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3">
                {% for message in app.session.flashBag.get('message') %}
                    <div class="alert alert-warning"> {{ message }}</div>
                {% endfor %}
                <div class="panel-heading text-center"><h1>Episodes of : {{ tvShow_name }}</h1></div>
                <a class="btn btn-primary btn-lg" href="{{ path('add_episode', {'slug' : tvShow.slug}) }}" role="button">Add Episode</a>
                <a class="btn btn-primary btn-lg" href="{{ path('list_tvshow') }}" role="button">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Back to TV Show List
                </a>
                <table class="table table-hover table-bordered">
                    <thead class="thead-inverse">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Season</th>
                        <th>Number</th>
                        <th>Note</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for episode in episodes %}
                        <tr>
                            <td>{{ episode.id }}</td>
                            <td>{{ episode.name }}</td>
                            <td>{{ episode.season }}</td>
                            <td>{{ episode.number }}</td>
                            <td>{{ episode.note }}</td>
                            <td>
                                <a href="{{ path('edit_episode', {'slug' : tvShow.slug, 'episode' : episode.id}) }}" class="btn btn-warning">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('delete_episode', {'slug' : tvShow.slug, 'episode': episode.id}) }}" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
